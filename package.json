{
  "name": "hero-max-server",
  "version": "1.0.0",
  "description": "Back-end for my  HeroMax application.",
  "main": "index.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "node dist/{file_name}.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules ./src/{file_name}.ts",
    "husky:prepare": "husky install",
    "test": "jest --passWithNoTests",
    "test:watch": "yarn test --watch",
    "test:staged": "yarn test --findRelatedTests",
    "test:push": "yarn test --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/patricks-js/hero-max-server.git"
  },
  "keywords": [
    "Back-end",
    "Movies",
    "API"
  ],
  "author": "Lucas Patrick",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/patricks-js/hero-max-server/issues"
  },
  "homepage": "https://github.com/patricks-js/hero-max-server#readme",
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.21",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "git-commit-msg-linter": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-alias": "^0.0.3-1",
    "ts-jest": "^29.0.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  }
}
